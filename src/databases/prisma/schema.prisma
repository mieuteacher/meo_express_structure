datasource db {
  provider = "mysql"
  url      = "mysql://root:@127.0.0.1:3306/prisma_db"
}

model pictures {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String
  products  products @relation(fields: [productId], references: [id], map: "Pictures_productId_fkey")

  @@index([productId], map: "Pictures_productId_fkey")
}

model products {
  id       Int        @id @default(autoincrement())
  name     String     @unique(map: "Products_name_key")
  price    Float
  active   Boolean    @default(false)
  pictures pictures[]
}

generator client {
  provider = "prisma-client-js"
}