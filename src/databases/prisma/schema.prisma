generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = "mysql://root:@127.0.0.1:3306/prisma_db"
}
model categories {
  id        Int      @id @default(autoincrement())
  title String @unique
  status Boolean @default(false)
  avatar String
  deleted Boolean @default(false)
  products products[]
}
model products {
  id       Int        @id @default(autoincrement())
  name     String     @unique(map: "Products_name_key")
  active   Boolean    @default(false)
  des String
  avatar String
  category  categories @relation(fields: [category_id], references: [id])
  category_id Int
  product_options product_options[]
}
model product_options {
  id       Int        @id @default(autoincrement())
  name     String     @unique()
  price Float
  stock Int
  active   Boolean    @default(false)
  product_option_pictures product_option_pictures[]
  product_id Int
  product  products @relation(fields: [product_id], references: [id])
}
model product_option_pictures {
  id        Int      @id @default(autoincrement())
  url       String 
  is_avatar Boolean @default(false)
  product_option_id Int
  product_option  product_options @relation(fields: [product_option_id], references: [id])
}

